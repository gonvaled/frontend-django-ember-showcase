<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Create User</h2>

      <form class="form-horizontal" {{action 'createUser' on='submit'}}>
        <div class="form-group">
          <div class="col-sm-12">
            <div>
              <h3>User Name</h3>
              {{input class="textinput textInput form-control" id="id_username" name="username" placeholder="User Name" type="text" value=model.username}}
              {{#each model.errors.username as |error|}}
                <span class="message error">{{error.message}}</span>
              {{/each}}
            </div>
            <div>
              <h3>Project Description</h3>
              {{input class="textinput textInput form-control" id="id_email" name="email" placeholder="User Email" type="email" value=model.email}}
              {{#each model.errors.email as |error|}}
                <span class="message error">{{error.message}}</span>
              {{/each}}
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-3">
            <input type="submit" name="submit" value="Create User" class="btn btn-primary btn-default" id="submit-id-submit">
          </div>
        </div>
      </form>

    </div>
  </div>
</div>
